<% layout("/layouts/doctorBoilerplate") %>

    <!-- Main Content -->
    <main class="container my-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title h5 text-primary mb-4">Today Appointments</h2>

                <!-- Appointments Table -->
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Patient Name</th>
                                <th>Date</th>
                                <th>Day</th>
                                <th>Shift</th>
                                <th>Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(appointment of allAppointment) {%>
                                <% if(appointment.status=="Confirmed" ) { %>
                                    <% let dayName=new Date(appointment.date).toLocaleDateString('en-US', {
                                        weekday: 'long' }); %>
                                        <% let formattedDate=new Date(appointment.date).toLocaleDateString('en-US', {
                                            year: 'numeric' , month: 'long' , day: 'numeric' }); %>
                                            <tr>
                                                <td>Nasim Khan</td>
                                                <td>
                                                    <%= formattedDate %>
                                                </td>
                                                <td>
                                                    <%= dayName %>
                                                </td>
                                                <td>
                                                    <%= appointment.shift %>
                                                </td>
                                                <td>9:30 AM - 12:00 PM</td>
                                                <td>
                                                    <form method="POST"
                                                        action="/doctor/dashboard/appointment/<%= appointment._id %>/seen">
                                                        <button type="submit" class="btn btn-success btn-sm">Mark as Seen</button>
                                                    </form>
                                                </td>
                                            </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>