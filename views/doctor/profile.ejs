<% layout("/layouts/doctorBoilerplate") %>

<!-- Profile Section -->
    <main class="container py-5">
        <div class="card card-custom mx-auto" style="max-width: 600px; padding: 20px">
            <div class="card-body">

                <!-- Profile Image -->
                <div class="d-flex flex-column align-items-center mb-4">
                    <img src="https://www.doctorbangladesh.com/wp-content/uploads/2021/03/Dr.-Md.-Sirajur-Rahman-Sarwar-1.jpg"
                        alt="Dr. Md. Sirajur Rahman Sarwar" class="rounded-circle profile-img mb-3">
                    <h2 class="text-blue-800 fw-bold text-center">Dr. Md. Sirajur Rahman Sarwar</h2>
                    <p class="text-muted text-center small mb-0">
                        MBBS (DMC), BCS (Health), MD (Cardiology), FCPS (Final)
                    </p>
                </div>

                <!-- Profile Info -->
                <div class="mb-4">
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-1">Training</h5>
                        <p class="small text-muted mb-0">Trained on Cardiology in Malaysia, Singapore, Thailand & India
                        </p>
                    </div>
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-1">Specialist</h5>
                        <p class="small text-red-600 fw-bold mb-0">Cardiology & Medicine Specialist</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-1">Designation</h5>
                        <p class="small mb-0">Assistant Professor, Cardiology</p>
                    </div>
                    <div>
                        <h5 class="fw-semibold mb-1">Institute</h5>
                        <p class="small text-muted mb-0">Sylhet MAG Osmani Medical College & Hospital</p>
                    </div>
                </div>

                <!-- Edit Profile Button -->
                <div class="text-center">
                    <a href="/doctor/dashboard/profile/editProfile" class="btn btn-primary px-5 py-2">Edit Profile</a>
                </div>

            </div>
        </div>
    </main>
