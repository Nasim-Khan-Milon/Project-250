            <!-- Schedule Appointment -->
            <div class="container-fluid my-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <h3 class="fw-bold text-center mb-4">Schedule Appointment</h3>
                        <div class="row g-4">
                            <% for (let schedule of allSchedules) { %>
                                <% let dayName=new Date(schedule.date).toLocaleDateString('en-US', { weekday: 'long' });
                                    %>
                                    <% let formattedDate=new Date(schedule.date).toLocaleDateString('en-US', {
                                        year: 'numeric' , month: 'long' , day: 'numeric' }); %>

                                        <div class="col-md-6">
                                            <form action="/patient/home/appointment" method="POST">
                                                <div class="p-4 border border-primary rounded h-100 shadow-sm">
                                                    <h5 class="fw-semibold text-primary mb-2">
                                                        <%= dayName %>
                                                    </h5>
                                                    <p class="mb-1">
                                                        üìÖ <b>Date</b>:
                                                        <span class="fw-medium text-dark">
                                                            <%= formattedDate %>
                                                        </span>
                                                    </p>
                                                    <p class="mb-3">
                                                        ‚è∞ <b>Shift</b>:
                                                        <span class="fw-medium text-dark">
                                                            <%= schedule.shift %>
                                                                <% if(schedule.shift=="Morning" ) {%>
                                                                    (9:00 AM - 12:00 PM)
                                                                    <% } else {%>
                                                                        (3:00 AM - 8:00 PM)
                                                                        <% } %>
                                                        </span>
                                                    </p>
                                                    <input type="hidden" name="scheduleId"
                                                        value="<%= schedule._id %>" />
                                                    <div class="text-center">
                                                        <button type="submit" class="btn btn-sm btn-primary px-4">
                                                            Book Now
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features -->
            <section class="py-5 bg-white">
                <div class="container text-center">
                    <h3 class="fw-bold text-primary mb-5">Why Choose Dr. Sarwar?</h3>
                    <div class="row g-4">
